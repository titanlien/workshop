---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: webapp-1
spec:
  selector:
    matchLabels:
      app: web-1
  replicas: 3
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  template:
    metadata:
      labels:
        app: web-1
    spec:
      containers:
        - name: webapp
          image: {{ DOCKER_REGISTRY }}/titanlien/workshop/webapp1:{{webapp_tag}}
          imagePullPolicy: Always
          ports:
          - containerPort: 5000
          readinessProbe:
            httpGet:
               path: /
               port: 5000
            initialDelaySeconds: 5
            periodSeconds: 5
            successThreshold: 1
---
apiVersion: v1
kind: Service
metadata:
  name: webapp-1
  labels:
    app: web-1
spec:
  type: NodePort
  ports:
    - port: 80
      targetPort: 5000
      protocol: TCP
      name: http
  selector:
    app: web-1
