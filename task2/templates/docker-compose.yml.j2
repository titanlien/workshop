version: '3.4'

services:
  nginx:
    image: nginx:stable
    volumes:
      - type: bind
        source: ./nginx/nginx.conf
        target: /etc/nginx/nginx.conf
    ports:
    - 80:80
    depends_on:
    {% for n in count %}
    - webapp-{{n}}
    {% endfor %}
    restart: always
  
  {% for n in count %}
  webapp-{{n}}:
    image: webapp
    build:
      context: .
      dockerfile: webapp/Dockerfile

  {% endfor %}
